<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight">
    <com.portigon.ratingservices.ratingdb.widget.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/rating_list_item_icon"
        android:src="@drawable/cor_icon"
        android:background="@color/bg_method_cor" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@+id/rating_list_item_name"
            android:text="Corporate A">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_height="wrap_content"
            android:id="@+id/rating_list_item_name_secondary"
            android:text="Corporate A">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="24dp"
        android:layout_weight="0"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="#e72"
        android:textStyle="bold"
        android:gravity="center"
        android:text="A"
        android:id="@+id/rating_list_item_rating"/>

</LinearLayout>